    @Model.ShortDesc
</div>
<div>
    <h3 class="mt-3">Long Desc</h3>
    @Model.LongDesc
</div>
<div>
    <h3 class="mt-3">Price</h3>
    @Model.Price
</div>
<div>
    <h3 class="mt-3">User FullName</h3>
    @Model.AppUser.FullName
</div>
<div>
    <h3 class="mt-3">Duration</h3>
    @Model.Duration
</div>
<div>
    <h3 class="mt-3">ClassDuration</h3>
    @Model.ClassDuration
</div>
<div>
    <h3 class="mt-3">SeatsAvailable</h3>
    @Model.SeatsAvailable
</div>
<div>
    <h3 class="mt-3">Website</h3>
    @Model.Website
</div>
<div>
    <h3 class="mt-3">Phone</h3>
    @Model.Phone
</div>
<div>
    <h3 class="mt-3">Behance</h3>
    @Model.Behance
</div>
<div>
    <h3 class="mt-3">Facebook</h3>
    @Model.Facebook
</div>
<div>
    <h3 class="mt-3">Twitter</h3>
    @Model.Twitter
</div>
<div>
    <h3 class="mt-3">Price</h3>
    @Model.Price
</div>
<div>
    <h3 class="mt-3">Level</h3>
    @Model.Level
</div>
<div>
    <h3 class="mt-3">Institution</h3>
    @Model.Institution
</div>
<div>
    <h3 class="mt-3">WhatYouWillLearn</h3>
    @Model.WhatYouWillLearn
