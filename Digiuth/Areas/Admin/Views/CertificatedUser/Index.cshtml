
@model IEnumerable<Certificate>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Certificated User List</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                   FirstName
                                </th>
                                <th>
                                    LastName
                                </th>
                                <th>
                                   Code
                                </th>
                                <th>
                                   CourseName
                                </th>
                                <th>
                                   TeacherName
                                </th>
                                <th>
                                    EndDate
                                </th>
                               
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Certificate item in Model)
                            {
                            <tr>
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                                <td>
                                    @item.CertificateCode
                                </td>
                                <td>
                                    @item.CourseName
                                </td>
                                <td>
                                    @item.TeacherName
                                </td>
                                <td>
                                    @item.EndDate.ToString("dd MMMM yyyy")
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                    <a asp-action="GetCertificate" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

