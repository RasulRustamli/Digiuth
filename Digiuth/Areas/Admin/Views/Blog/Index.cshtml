@model ICollection<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hidden" value="bio" />
<div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn bg-success">Create Blog</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Short Description
                            </th>
                        </tr>
                    </thead>
                    <tbody style="cursor:pointer">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/img/blog/@item.Image" alt="Alternate Text" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    @item.ShortDesc
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>