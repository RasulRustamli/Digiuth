
@model IEnumerable<OurEvent>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>
                <a asp-action="Create" class="btn btn-success mt-3">Create new Event</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    ShortDesc
                                </th>
                                <th>
                                    StartDate
                                </th>
                                <th>
                                    StartTime
                                </th>
                                <th>
                                    EndTime
                                </th>
                                <th>
                                    Organizer
                                </th>
                                <th>
                                    SeatCount
                                </th>
                                <th>
                                    Place
                                </th>
                                <th>
                                    WebSite
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OurEvent item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/assets/img/event/@item.Image" style="width:50px; height:50px" />
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.ShortDesc
                                    </td>
                                    <td>
                                        @item.StartDate.ToString("dd MMMM yyyy")
                                    </td>
                                    <td>
                                        @item.StartTime.ToString("hh:mm")
                                    </td>
                                    <td>
                                        @item.EndTime.ToString("hh:mm")
                                    </td>
                                    <td>
                                        @item.Organizer
                                    </td>
                                    <td>
                                        @item.SeatCount
                                    </td>
                                    <td>
                                        @item.Place
                                    </td>
                                    <td>
                                        @item.Website
                                    </td>
                                    <td>
                                        @item.Phone
                                    </td>
                                    <td>
                                        @item.MainCategory.Name
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    
}