@model AppUser 
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

  
    <!-- breadcrumb-area -->
    <section class="breadcrumb-area d-flex align-items-center" style="background-image:url(../../assets/img/testimonial/test-bg.png)">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-12 col-lg-12">
                    <div class="breadcrumb-wrap text-left">
                        <div class="breadcrumb-title">
                            <h2>Team Details</h2>
                            <div class="breadcrumb-wrap">

                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Teams</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- Project Detail -->
    <section class="team-area-content">
        <div class="container">

            <!-- Lower Content -->
            <div class="lower-content">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-12 col-sm-12 text-center">
                        <div class="team-img-box">
                            <img src="~/assets/img/team/@Model.Image" alt="img">
                        </div>

                    </div>

                    <div class="text-column col-lg-6 col-md-12 col-sm-12">
                        <div class="s-about-content pl-30 wow fadeInRight" data-animation="fadeInRight" data-delay=".2s">
                            <span>@Model.Position</span>
                            <h2>@Model.FullName</h2>

                            <ul>
                                <li>
                                    <div class="icon"><i class="fal fa-envelope"></i> <strong>Email</strong></div>
                                    <div class="text">@Model.Email</div>
                                </li>
                                <li>
                                    <div class="icon"><i class="fal fa-phone"></i> <strong>Phone</strong></div>
                                    <div class="text">@Model.Phone</div>
                                </li>
                                <li>
                                    <div class="icon"><i class="fal fa-map-marker-alt"></i><strong>Address</strong></div>
                                    <div class="text">@Model.Address</div>
                                </li>
                                <li>
                                    <div class="icon"><i class="fal fa-globe"></i><strong>Website</strong></div>
                                    <div class="text">@Model.Website</div>
                                </li>
                            </ul>


                            <div class="social">
                                <a href="@Model.Facebook"><i class="fab fa-facebook-f"></i></a>
                                <a href="@Model.Twitter"><i class="fab fa-twitter"></i></a>

                            </div>

                        </div>
                    </div>


                </div>
            </div>

        </div>
    </section>
    <!--End Project Detail -->

</main>

