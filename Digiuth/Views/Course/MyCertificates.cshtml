@model List<Certificate>
@{
    ViewData["Title"] = "MyCertificates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- breadcrumb-area -->
<section class="breadcrumb-area d-flex align-items-center" style="background-image:url(../../assets/img/testimonial/test-bg.png)">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-12 col-lg-12">
                <div class="breadcrumb-wrap text-left">
                    <div class="breadcrumb-title">
                        <h2>  Certificated Students </h2>
                        <div class="breadcrumb-wrap">

                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Students</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb-area-end -->
<section id="courses" class="eventes-area fix pt-120 pb-120" style=" background-image: url(../../assets/img/bg/event-bg-aliments.png); background-repeat: no-repeat; background-position: center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title center-align text-center mb-50">
                    <h5>Certificates</h5>
                </div>
            </div>
        </div>
        @if (Model.Count() > 0)
        {<div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Certificated User List</h4>
                            <div class="table-responsive pt-3">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                FirstName
                                            </th>
                                            <th>
                                                LastName
                                            </th>
                                            <th>
                                                Code
                                            </th>
                                            <th>
                                                CourseName
                                            </th>
                                            <th>
                                                TeacherName
                                            </th>
                                            <th>
                                                EndDate
                                            </th>

                                            <th>
                                                Settings
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Certificate item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.FirstName
                                                </td>
                                                <td>
                                                    @item.LastName
                                                </td>
                                                <td>
                                                    @item.CertificateCode
                                                </td>
                                                <td>
                                                    @item.CourseName
                                                </td>
                                                <td>
                                                    @item.TeacherName
                                                </td>
                                                <td>
                                                    @item.EndDate.ToString("dd MMMM yyyy")
                                                </td>
                                                <td>
                                                    <a asp-action="GetCertificate" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                        <i class="mdi mdi-delete">Print Certificate</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
            else
            {
                <div class="row"><h3>Empty list</h3></div>
            }
    </div>
</section>

